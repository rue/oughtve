load "tasks/setup.rb"

task :default => "spec:run"


PROJ.name = "oughtve"
ensure_in_path "lib" and require "#{PROJ.name}/version"


# Project info
PROJ.version        = Oughtve::VERSION.join "."
PROJ.url            = "http://#{PROJ.name}.kittensoft.org"
PROJ.rubyforge.name = PROJ.name


# Author & contact
PROJ.authors        = "Eero Saynatkari"
PROJ.email          = "esaynatkari@engineyard.com"


# Doc files
PROJ.history_file   = "doc/HISTORY"
PROJ.readme_file    = "doc/README"


# Announcement
PROJ.file           = "doc/ANNOUNCE"


# RubyGems
PROJ.manifest_file  = "doc/Manifest"

